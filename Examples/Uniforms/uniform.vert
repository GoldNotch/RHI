#version 450layout (location = 0) in vec2 inPos;layout (location = 1) in vec3 inColor;layout(location = 0) out vec3 fragColor;layout(binding = 0) uniform UniformBlock {    float t;} ub;layout(binding = 1) uniform TransformBlock {    float sin_x;	float cos_x;} tb;void main() {	mat2 r_mat;	r_mat[0] = vec2(tb.cos_x, -tb.sin_x);	r_mat[1] = vec2(tb.sin_x, tb.cos_x);	// here ub.t is kind of scale    gl_Position = vec4((r_mat * inPos) * ub.t, 0.0, 1.0);    fragColor = inColor;}